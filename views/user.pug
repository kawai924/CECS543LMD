extends layout.pug

block content
  .container
    .row.small-margin-top
      .col-lg-12
        .jumbotron.jumbotron-fluid
          .container
            h1.display-4 LMD Version Control System
            p.lead A lightweight, web-based, intuitive VCS.
    .row
      .col-lg-6
        form(method='POST')
          .btn-group.btn-group-toggle(data-toggle='buttons')
            label.btn.btn-secondary
              input#create-repo-button(type='radio' name='command_option' value="create" autocomplete='off')
              |  Create Repo
            label.btn.btn-secondary
              input#check-in-button(type='radio' name='command_option' value="check-in" autocomplete='off')
              |  Check In
            label.btn.btn-secondary
              input#check-out-button(type='radio' name='command_option' value="check-out" autocomplete='off')
              |  Check Out

          input#create-repo.form-control.user-input.small-margin-bottom(type='text' name='repoName' placeholder='Repo Name')
          input#target-folder.form-control.user-input.small-margin-bottom(type='text' name='targetFolder' placeholder='Folder Path' disabled='')
          input#label.form-control.user-input.small-margin-bottom(type='text' name='label' placeholder='Enter Label' disabled='')
          //- input#create-repo-button.btn.btn-outline-primary.small-margin-top(type='submit' onclick='createRepo()')
          input#create-repo-button.btn.btn-outline-primary.small-margin-top(type='submit')
      .col-lg-6
        #repo-created
    //
      <div class="row">
      <div class="col-lg-12">
      <div id="repo-created" class="">
      </div>
      </div>
      </div>
    .row
      .col-lg-12
        .data-list
          h5  Database Folder List 
          each repo in repoInfoList
            .card(style="width: 36rem;")
                .card-body
                    h5.card-title #{repo.name}
                    ul
                       each manifest in repo.manifests
                        li= manifest.name
                          ul
                            each key in Object.keys(manifest)
                              if (key !== 'name')
                                li
                                  span.font-weight-bold=`${key}: `
                                  span=manifest[key]

                    a(href="#").btn.btn-primary Repo details
  script(src='https://code.jquery.com/jquery-3.3.1.slim.min.js' integrity='sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo' crossorigin='anonymous')
  script(type="text/javascript" src='/app/js/user.js')