extends layout.pug

block content
  .container#content
    .row.small-margin-top
      .col-lg-12
        .jumbotron.jumbotron-fluid.text-center.bg-white
          .container
            h1.display-4 WELCOME #{userName.toUpperCase()} 
            p.lead LMD VSC is at your service
            a.btn.btn-outline-danger.small-margin-top.ml-2(href='/') Log Out
    
    .row.justify-content-center.text-center.mb-4
      .col-sm-6.text-center
        h2.text-info.font Command Line Guide
      .col-sm-6
        h2.text-info.font Note
        

    .row.justify-content-center.mb-4
      .col-sm-8#command-guide.border.border-info.p-4.border-right-0
        p.text-info.font-weight-bold Create ~>&emsp;
          span.text-dark.font-weight-normal create | &lt;project name&gt; | &lt;target folder&gt;
        p Example: create ProjectAlpha /SomeFolder
        p.text-info.font-weight-bold Check-in ~>&emsp;
          span.text-dark.font-weight-normal check-in | &lt;project name&gt;
        p Example: check-in ProjectAlpha
        p.text-info.font-weight-bold Check-out ~>&emsp;
          span.text-dark.font-weight-normal check-out  | &lt;from_username&gt; | &lt;from_repoName&gt; | &lt;from manifest id&gt; OR &lt;label name | &lt;target_path&gt;
        p Example with ID: check-out Bob ProjectBeta 123456 /BobTargetFolder
        p Example with label:  check-out Bob ProjectBeta somelabel /BobTargetFolder
        p.text-info.font-weight-bold Merge-out ~>&emsp;
          span.text-dark.font-weight-normal merge-out | &lt;project name&gt; | &lt;target manifest id&gt; | &lt;source username&gt; | &lt;souce manifest id&gt;
        p Example: merge-out ProjectBeta Alice_manifestID Bob Bob_manifestID
        p.text-info.font-weight-bold Merge-in ~>&emsp;
          span.text-dark.font-weight-normal merge-in | &lt;project name&gt; 
        p Example: merge-in ProjectBeta
      .col-sm-4.border.border-info.p-4.border-left-0
        ul
          li Assume this [USERNAME] issues these commands
          li Target = this [USERNAME]
          li Source = other [USERNAME]
          li | = a space between element


    .row.text-center.justify-content-center
      .col-lg-9
        form(method='POST').form
          .input-group.mb-3
            .input-group-prepend
              span.input-group-text.text-info#command-line-prepend Command-line
            textarea.form-control(type="text", aria-label="Your command here..." placeholder="Command line" name="commandInput")
            button#command-button.btn.btn-outline-primary.small-margin-top(type='submit') Submit     

